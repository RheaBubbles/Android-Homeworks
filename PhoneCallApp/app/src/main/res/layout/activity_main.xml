<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_title"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/call_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/call_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/call_button" />

    <Button
        android:id="@+id/call_button_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/call_button_1" />

    <Button
        android:id="@+id/call_button_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="button2Call"
        android:text="@string/call_button_2" />

    <Button
        android:id="@+id/call_button_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/call_button_3" />

</LinearLayout>